<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/firstSemId"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="1st Semester"
            android:textAllCaps="false"/>
            <Button
                android:id="@+id/secondSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="2nd Semester"
                android:textAllCaps="false"/>
            

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/thirdSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="3rd Semester"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/fourthSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="4th Semester"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fifthSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="5th Semester"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/sixthSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="6th Semester"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/seventhSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="7th Semester"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/eightSemId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="8th Semester"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/questionId"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Previous Questions"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/syllebusId"
                android:layout_height="80dp"
                android:layout_width="200dp"
                android:text="Syllebus"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>

<android.support.design.widget.NavigationView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_view"
    app:menu="@menu/nav_menu"
    android:layout_gravity="start">

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>